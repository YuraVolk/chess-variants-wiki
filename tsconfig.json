{
	"compilerOptions": {
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"jsx": "react",
		"target": "ESNext",
		"isolatedModules": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"strict": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"lib": ["ES2021.String", "ES2017", "DOM"],
		"allowSyntheticDefaultImports": true,
		"noErrorTruncation": true,
		"typeRoots": ["./src/main/client/javascript/global.d.ts", "./node_modules/@types"],
		"esModuleInterop": true,
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"paths": {
			"@moveGeneration/*": ["./src/main/client/ts/logic/movegen/*"],
			"@components/*": ["./src/main/client/ts/components/*"],
			"@utils/*": ["./src/main/client/ts/utils/*"],
			"@client/*": ["./src/main/client/*"],
			"@css/*": ["./src/main/client/scss/*"]
		}
	}
}
